<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/liner_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/atp__activity_home_background"
    android:orientation="vertical"
    android:weightSum="10">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6">


        <ImageView
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/atp__icon_logo_in_app" />

        <include layout="@layout/light_around_logo">


        </include>
    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1.3">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/line_bg_menu_game_trial"

            />

        <Button
            android:id="@+id/btn_play_trial"
            android:layout_width="260dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="@drawable/state_bg_menu_game_trial" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1.3">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/line_bg_menu_game_zalo" />

        <Button
            android:id="@+id/btn_signin_zalo"
            android:layout_width="260dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="@drawable/state_bg_menu_game_zalo" />

    </RelativeLayout>

</LinearLayout>